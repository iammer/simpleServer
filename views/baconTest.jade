extends layouts/main

block head
	script(src='/js/bacon/Bacon.min.js', type='text/javascript')
	script(src='/js/bacon.jquery/bacon.jquery.min.js', type='text/javascript')
	script(src='/js/bacon.model/bacon.model.min.js', type='text/javascript')
	script(src='/socket.io/socket.io.js', type='text/javascript')
	script(src='/coffee/baconTest.js', type='text/javascript')

block body
	each id in ['a','b','c']
		.row
			.column.small-3.small-centered
				input(type='text', id=id)

	.row
		.column.small-2.small-offset-3 The server time is now: 
			span#serverNow
		.column.small-2 The client time is now: 
			span#clientNow
		.column.small-2.end Offset is: 
			span#nowOffset






